<?xml version="1.0" encoding="UTF-8"?>
<theme>
  <formatVersion>7</formatVersion>
  <include>./animatedcoverssubset.xml</include>
  <view name="system">
    <carousel name="systemcarousel">
      <defaultTransition>fade &amp; slide</defaultTransition>
    </carousel>
    <image name="background" extra="true">
      <visible>false</visible>
    </image>
    <image name="ControllerOverlay" extra="true">
      <visible>false</visible>
    </image>
    <text name="systemInfo">
      <glowColor>00000022</glowColor>
      <zIndex>12</zIndex>
    </text>
    <image name="CenterFade" extra="true">
      <color>000000B0</color>
      <zIndex>12</zIndex>
    </image>
  </view>

	<view name="system,basic,detailed,grid,gamecarousel">
    <image name="backgroundMachines" extra="true">
      <tile>false</tile>
      <linearSmooth>true</linearSmooth>
      <path>./../../art/background2/default.jpg</path>
      <path>./../../art/background2/${system.theme}.jpg</path>
      <color>FFFFFFFF</color>
      <pos>0.5 0.5</pos>
      <origin>0.5 0.5</origin>
      <minSize>1 1</minSize>
	  <delay>0</delay>
      <zIndex>01</zIndex>
    </image>

    <image name="backgroundFade" extra="static">
      <tile>false</tile>
      <linearSmooth>true</linearSmooth>
      <path>./../../art/back.png</path>
      <color>FFFFFFFF</color>
      <pos>0.5 0.5</pos>
      <origin>0.5 0.5</origin>
      <minSize>1 1</minSize>
      <zIndex>12</zIndex>
    </image>
    <image name="backgroundMachines" extra="true" region="eu"/>
    <image name="backgroundMachines" extra="true" region="us">
      <path>./../../art/background2/us/${system.theme}.jpg</path>
    </image>
    <image name="backgroundMachines" extra="true" region="jp">
      <path>./../../art/background2/jp/${system.theme}.jpg</path>
    </image>
  </view>


	<view name="basic,detailed,grid,gamecarousel">
    <image name="backgroundMachines" extra="true">
      <color>505050</color>
		<colorEnd>101010</colorEnd>
		<gradientType>vertical</gradientType>
    </image>

  </view>

</theme>
